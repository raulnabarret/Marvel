@import "./card/styles.styl"

border-color(color)
	border 1px solid color
	box-sizing: border-box

html 
	font-family 'Arial'
		
.Layout
	border-color(black)
	background-image url('../images/city.jpg')
	background-size cover	
	display flex
	padding 8px
	flex-direction column
	justify-content space-between
	margin 8px
	min-height 100vh
	> section
		margin 8px
		
	&-rival
		display flex
		justify-content space-between		
	&-main
		display flex
		justify-content space-between
		
	&-player
		display flex
		justify-content space-between
				
	&-status
		background #c53b3b
		border-color(#ab0000)
		width 200px
		
	&-battle
		background-image url('../images/pattern.jpg')
		background-size cover
		border-color(#ab0000)
		flex 1
		margin 0 8px;
		
	&-phases
		background #ae2c2c
		border-color(#ab0000)
		width 200px
		
.Status
	&-player
		background #ab0000
		color #fff
		margin 0 0
		padding 8px
	&-points
		color #fff
		text-align center
		margin 0
		padding 8px

.Phases
	background #ae2c2c
	color #fff
	text-align center	
		


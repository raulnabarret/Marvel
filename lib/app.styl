@import "./card/styles.styl"

border-color(color)
	border 1px solid color
	box-sizing: border-box

html 
	font-family 'Arial'
		
.Layout
	display flex
	padding 8px
	flex-direction column
	justify-content space-between
	margin 8px
	min-height 100vh
	border-color(black)
	> section
		margin 8px
		
	&-rival
		border-color(red)
		display flex
		justify-content space-between		
	&-main
		display flex
		justify-content space-between
		
	&-player
		border-color(peru)
		display flex
		justify-content space-between
				
	&-status
		border-color(green)
		width 200px
		
	&-battle
		border-color(orange)
		flex 1
		margin 0 8px;
		
	&-phases
		border-color(purple)
		width 200px
		

